# Environment Configuration for Tia N. List Project
# Copy this file to .env and fill in your API keys

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================

# Primary LLM provider (gemini, openrouter, openai)
# If not set, defaults to 'gemini'
LLM_PROVIDER=gemini

# Common LLM settings
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=1.0

# =============================================================================
# GEMINI CONFIGURATION
# =============================================================================

# Gemini API Key (required if LLM_PROVIDER=gemini or gemini used as fallback)
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini models (optional, uses defaults if not set)
GEMINI_FILTERING_MODEL=gemini-2.0-flash-lite
GEMINI_ANALYSIS_MODEL=gemini-2.5-flash

# =============================================================================
# OPENROUTER CONFIGURATION
# =============================================================================

# OpenRouter API Key (required if LLM_PROVIDER=openrouter or openrouter used as fallback)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter models (optional, uses free tier defaults if not set)
OPENROUTER_FILTERING_MODEL=meta-llama/llama-3.3-8b-instruct:free
OPENROUTER_ANALYSIS_MODEL=deepseek/deepseek-chat-v3.1:free

# Alternative paid OpenRouter models for better performance:
# OPENROUTER_FILTERING_MODEL=meta-llama/llama-3.1-8b-instruct
# OPENROUTER_ANALYSIS_MODEL=anthropic/claude-3.5-haiku

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================

# OpenAI API Key (required if LLM_PROVIDER=openai or openai used as fallback)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI models (optional, uses defaults if not set)
OPENAI_FILTERING_MODEL=gpt-4o-mini
OPENAI_ANALYSIS_MODEL=gpt-4o-mini

# =============================================================================
# BEEHIIV CONFIGURATION
# =============================================================================

# Beehiiv API Key for newsletter distribution
BEEHIIV_API_KEY=your_beehiiv_api_key_here

# Beehiiv Publication ID (find in Beehiiv settings)
BEEHIIV_PUBLICATION_ID=your_publication_id_here

# =============================================================================
# OTHER CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
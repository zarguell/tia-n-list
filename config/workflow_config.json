{
  "version": "1.0.0",
  "description": "Configuration for simple digest workflow",
  "workflow_settings": {
    "max_articles_per_feed": 50,
    "min_content_length": 200,
    "content_fetch_timeout_per_article": 45,
    "content_fetch_overall_timeout": 1800,
    "quality_filter_min_length": 200,
    "default_article_score": 50,
    "memory_days_back": 7,
    "memory_cleanup_days": 30
  },
  "processing_settings": {
    "llm_provider": "openrouter",
    "filtering_model": "meta-llama/llama-3.3-8b-instruct:free",
    "analysis_model": "openai/gpt-oss-20b:free",
    "storage_provider": "json"
  },
  "digest_settings": {
    "max_articles_for_prompt": 10,
    "max_content_length": 1500,
    "max_references": 15,
    "max_tokens": 3000
  },
  "workflow_schedule": {
    "cron": "0 11 * * *",
    "description": "Daily at 6:00 AM EST (11:00 AM UTC)"
  },
  "git_settings": {
    "author_name": "GitHub Action",
    "author_email": "action@github.com",
    "commit_prefix": "üõ°Ô∏è Daily Threat Intelligence Digest",
    "co_author": "Claude <noreply@anthropic.com>"
